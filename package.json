{
  "name": "generator-license",
  "version": "5.5.0",
  "description": "License generator for Yeoman based projects.",
  "homepage": "https://github.com/jozefizso/generator-license",
  "author": {
    "name": "Jozef Izso",
    "url": "https://github.com/jozefizso"
  },
  "type": "module",
  "exports": "generators",
  "keywords": [
    "yeoman-generator",
    "yeoman",
    "generator",
    "license"
  ],
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.19",
    "@types/yeoman-generator": "^5.2.11",
    "@types/yeoman-test": "^4.0.3",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.36.0",
    "fix-esm-import-path": "^1.3.1",
    "husky": "^6.0.0",
    "jest": "^29.4.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "ts-jest": "^29.0.5",
    "yeoman-environment": "^3.13.0",
    "yeoman-test": "^7.3.0"
  },
  "bugs": "https://github.com/jozefizso/generator-license/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/jozefizso/generator-license.git"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles --all --up 1 'src/*/templates/**' generators && fix-esm-import-path generators",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm audit --audit-level=high",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "yeoman-generator": "^5.7.0"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
